<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Todo web app</title>

    <!-- Bootstrap css link file -->
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous"> -->

    <!-- Font awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.2/css/all.min.css" integrity="sha512-1sCRPdkRXhBV2PBLUdRb4tMg1w2YPf37qatUFeS7zlBy7jJI8Lf4VHwWfZZfpXtYSLy85pkm9GaYVYMfw5BC1A==" crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- external css file -->
    <link rel="stylesheet" href="/css/home.css">

</head>
<body>
    <!-- <h1>Todo web app</h1> -->
    
    <!-- outter container -->
    <div class="container">
        <!-- App heading -->
        <div class="app-header">
            <h2>TODO App</h2>
        </div>
        <div><hr></div>

        <!-- post the content of the form -->
        <form action="/add-task" method="POST">

            <!-- description of the task -->
            <div class="desc">
                <label for="desc">DESCRIPTION</label>
                <div class="desc-text"><input type="text" name="desc" placeholder="What do you need to do?" required></div>
            </div>
            <div><hr></div>

            <div class="add-task">

                <!-- set category of the task if any (optional) -->
                <div class="category-container">
                    <label for="category">CATEGORY</label>
                    <br>
                    <select name="category" id="category">
                        <option value="default" style="color: grey;">Choose a category</option>
                        <option value="personal" selected>Personal</option>
                        <option value="work">Work</option>
                        <option value="school">School</option>
                        <option value="cleaning">Cleaning</option>
                        <option value="other">Other</option>
                    </select>
                </div>
                <div class="vl"></div>

                <!-- set due date for the task -->
                <div class="due-date-container">
                    <label for="date">DUE DATE</label>  
                    <br>
                <!-- add calender code here -->
                    <input type="date" name="date" placeholder="dd/mm/yyyy" required>
                <!-- <input type="text" placeholder="dd/mm/yyyy" onfocus="(this.type='date')" onblur="(this.type='text')"> -->
                </div>
            </div>
            <div><hr></div>

            <!-- buttons -->
            <div class="buttons">
                <div class="btn-design">
                    <!-- button for add task to todo list -->
                    <button class="btn" id="add-task">
                        <i class="fa-solid fa-plus"></i>
                        ADD TASK
                    </button>

                    <button class="btn" id="delete-tasks" type="submit" form="tasks-list-form">
                        <i class="fa-solid fa-trash-can"></i>
                        Delete Task
                    </button>
                </div>
            </div>
        </form>

        <!-- This div will show list of all the tasks stored in the Database -->
        <form action="/delete-tasks" method="POST" id="tasks-list-form">
            <% for(let task of task_list){%>
                <div>
                    <div><hr></div>
                    <div class="task">
                        <input id="check" type="checkbox" name="id" value="<%= task._id %>" >
                        <div class="task-data">
                            <p> <%= task.desc %> </p>
                            <i class="fas fa-calendar-alt"></i>
                            <span> <%= task.date %> </span>
                        </div>
                        <button type="button" class="<%= task.category %>"> <%= task.category %> </button>
                    </div>
                </div>
            <%}%>

        </form>

    </div>

    <script src="/js/home.js"></script>

    <!-- bootstrap js bundle link -->
    <!-- <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script> -->
</body>
</html>